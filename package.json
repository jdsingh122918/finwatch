{
  "name": "finwatch",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @finwatch/frontend dev",
    "build": "pnpm --filter @finwatch/frontend build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ts": "vitest run",
    "test:rust": "cargo test --manifest-path src-tauri/Cargo.toml",
    "test:all": "pnpm test:ts && pnpm test:rust",
    "lint": "tsc --noEmit",
    "tauri": "tauri"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^3.2.0"
  }
}
